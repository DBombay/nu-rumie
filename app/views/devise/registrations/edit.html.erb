<div class="row">
  <div class="small-8 small-centered columns">
    <h2 class="text-center"><%= current_user.first_name%>'s profile</h2>
  </div>
</div>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  </br>
  <div class="row">
    <div class = "small-10 small-centered columns">
      <h3 class="text-center">personal options</h2>
      <p class="text-center">having an identity crisis? you can update your personal info here</p>
      <div class="small-6 columns">
        <%= f.label :first_name, 'First Name' %>
        <%= f.text_field :first_name, autofocus: true %>
      </div>
      <div class="small-6 columns">
        <%= f.label :last_name, 'Last Name' %>
        <%= f.text_field :last_name %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class = "small-10 small-centered columns">
      <div class="small-6 columns">
        <%= f.label :age, 'Age' %>
        <%= f.text_field :age %>
      </div>
      <div class="small-6 columns">
        <%= f.label :gender, 'Gender' %>
        <%= f.text_field :gender %>
      </div>
    </div>
  </div>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  </br>
  <div class="row">
    <div class="small-8 small-centered columns">
      <h3 class="text-center">password options</h2>
      <p class="text-center">you can update your password here. we'll keep it a secret. promise.</p>
      <% if @minimum_password_length %>
      <p class="text-center">also, your password needs to have at least <%= @minimum_password_length %> characters</p>
      <% end %>
      <div class="small-6 columns">
        <%= f.label :password, 'New Password' %>
        <%= f.password_field :password, autocomplete: "off", placeholder:'leave blank if you don\'t want to change it' %>
      </div>
      <div class="small-6 columns">
        <%= f.label :password_confirmation, 'Confirm New Password' %>
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:'leave blank if you don\'t want to change it' %>
      </div>
    </div>
  </div>
  </br>
  <div class="row">
    <div class="small-8 small-centered columns">
      <h3 class="text-center">close your account</h2>
      <p class="text-center">if you don't need your account anymore, you close it here</p>
      <p class="text-center">
        <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="small-8 small-centered columns">
      <h3 class="text-center">confirm your changes</h2>
      <p class="text-center">enter your password and hit submit to confirm any changes</p>
      <div class= "small-10 columns">
        <%= f.label :current_password %>
        <%= f.password_field :current_password, placeholder:"you must enter your password to confirm changes", autocomplete: false %>
      </div>
      <div class="small-2 columns">
        </br>
        <%= f.submit "Update Profile" %>
      </div>
    </div>
  </div>
<% end %>
<div class="row">
  <div class="text-center">
    <%= link_to "Back", :back, class: "hollow button white" %>
  </div>
</div>
