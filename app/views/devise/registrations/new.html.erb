<div class="row">
  <div class="small-8 small-centered columns">
    <h2 class="text-center">sign up</h2>
    <p class="text-center">
      ready to get started? We need some information to start
      off with.
    </p>
  </div>
</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div class="row">
  <div class = "small-8 small-centered columns">
    <div class="small-12 columns">
      <%= f.label :first_name, 'first name' %>
      <%= f.text_field :first_name, autofocus: true %>
    </div>
  </div>
</div>

<div class="row">
  <div class = "small-8 small-centered columns">
    <div class="small-12 columns">
      <%= f.label :last_name, 'last name' %>
      <%= f.text_field :last_name %>
    </div>
  </div>
</div>

<div class="row">
  <div class = "small-8 small-centered columns">
    <div class="small-6 columns">
      <%= f.label :age, 'age' %>
      <%= f.text_field :age %>
    </div>
    <div class="small-6 columns">
      <%= f.label :gender, 'gender' %>
      <%= f.text_field :gender %>
    </div>
  </div>
</div>

<div class="row">
  <div class = "small-8 small-centered columns">
    <div class="small-12 columns">
      <%= f.label :email, 'e-mail' %>
      <%= f.email_field :email, placeholder: 'awesome@person.com' %>
    </div>
  </div>
</div>

<div class="row">
  <div class = "small-8 small-centered columns">
    <div class="small-12 columns">
      <% if @minimum_password_length %>
        <%= f.label :password, 'password' %><em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>
  </div>
</div>

<div class="row">
  <div class = "small-8 small-centered columns">
    <div class="small-12 columns">
      <%= f.label :password_confirmation, 'password confirmation' %>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>
  </div>
</div>

<div class="row">
  <div class="small-8 small-centered columns">
    <%= f.label :avatar, "profile photo" %>
    <%= f.file_field :avatar, class:"hollow button white"%>
  </div>
</div>

<div class="row">
  <div class="small-8 small-centered columns">
    <div class="text-center">
      <%= f.submit "sign up", class:"hollow button white" %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
<% end %>
