<% content_for :page_title, 'nü rümie' %>

<div class="orbit" role="region" aria-label="nu rumie navigator" data-orbit>
  <ul class="orbit-container">
      <button class="orbit-previous"><span class="show-for-sr">Previous Slide</span>&#9664;&#xFE0E;</button>
      <button class="orbit-next"><span class="show-for-sr">Next Slide</span>&#9654;&#xFE0E;</button>
    <li class="orbit-slide is-active">
      <div class="slide-content">
          <% if current_user %>
            <h1 class="text-center">hi <%=current_user.first_name.downcase%>!</h1>
          <%end%>
          <h1 class="text-center">-welcome to nü rümie!-</h1>
          <% if current_user %>
            <div class="text-center">
              <%= link_to "view your profile", current_user, class: 'hollow button white' %>
            </div>
          <%end%>
      </div>
    </li>
    <li class="orbit-slide">
      <div class="slide-content">
        <h1 class="text-center">-connect-</h1>
        <% if current_user %>
          <% if current_user.rumie_group %>
            <h2 class="text-center">click the button below to check out your rümies!</h2>
            <div class=text-center>
              <%= link_to "#{current_user.rumie_group.group_name.downcase}", current_user.rumie_group, class:'hollow button white' %>
            </div>
          <% else%>
            <h2 class="text-center">click the button below to view available rümie groups!</h2>
            <div class=text-center>
              <%= link_to "check out available rumies", rumie_groups_path, class:'hollow button white' %>
            </div>
          <% end %>
        <% else %>
          <h2 class="text-center">sign in to check out rümie groups, or form your own!</h2>
          <div class=text-center>
            <%= link_to "sign in", new_user_session_path, class:'hollow button white' %> <%= link_to "sign up", new_user_registration_path, class:'hollow button white'%>
          </div>
        <% end %>
      </div>
    </li>
    <li class="orbit-slide">
      <div class="slide-content">
        <h1 class="text-center">-meet others-</h1>
        <h2 class="text-center">click the button below to see who else is registered</h2>
        <div class=text-center>
          <%= link_to "check out other users", users_path, class:'hollow button white' %>
        </div>
      </div>
    </li>
  </ul>
  <nav class="orbit-bullets">
    <button class="is-active" data-slide="0"><span class="show-for-sr">welcome</span><span class="show-for-sr">Current Slide</span></button>
    <button data-slide="1"><span class="show-for-sr">rümie groups</span></button>
    <button data-slide="2"><span class="show-for-sr">users</span></button>
  </nav>
</div>
